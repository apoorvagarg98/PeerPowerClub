<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bggg"
    tools:context=".registrationAndLogin.forgotpassword"
    tools:ignore="MissingDefaultResource">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_43sdp"

        android:paddingRight="@dimen/_43sdp"

        >

        <EditText
            android:id="@+id/chEmailReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_40sdp"
            android:background="@drawable/lginbg"

            android:ems="10"
            android:hint="Enter Your Email"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textColor="#157575"
            android:textColorHighlight="#157575"
            android:textColorHint="#157575"
            android:textSize="18sp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/chresetpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/lginbg"
            android:text="Reset Password"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="normal"
            app:backgroundTint="#157575"
            />

        <ProgressBar
            android:id="@+id/chprogressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="80dp"
            android:layout_height="92dp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:visibility="invisible"
            />

    </LinearLayout>
</RelativeLayout>