<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".forgotpassword"
    tools:ignore="MissingDefaultResource">

    <EditText
        android:id="@+id/chEmailReset"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginBottom="360dp"
        android:background="@drawable/inpuut_bg"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Enter Your Email"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textColorHighlight="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="30dp" />

    <Button
        android:id="@+id/chresetpassword"
        android:layout_width="242dp"
        android:layout_height="61dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/inpuut_bg"
        android:text="Reset Password"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="@color/design_default_color_primary_variant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/chEmailReset"
        app:layout_constraintStart_toStartOf="@+id/chEmailReset"
        app:layout_constraintTop_toBottomOf="@+id/chEmailReset"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/chprogressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="80dp"
        android:layout_height="92dp"
        android:layout_marginTop="72dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/chresetpassword"
        app:layout_constraintStart_toStartOf="@+id/chresetpassword"
        app:layout_constraintTop_toBottomOf="@+id/chresetpassword"
        app:layout_constraintVertical_bias="0.087" />
</androidx.constraintlayout.widget.ConstraintLayout>