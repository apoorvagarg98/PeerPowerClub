<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/bggg"
    tools:context=".registrationAndLogin.Login">


    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_43sdp"

        android:paddingRight="@dimen/_43sdp"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            app:srcCompat="@drawable/ppc" />

        <EditText
            android:id="@+id/inputEmail2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:background="@drawable/lginbg"


            android:ems="20"
            android:hint="EMAIL"
            android:includeFontPadding="false"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:shadowColor="#F8EFEF"
            android:textColor="#157575"
            android:textColorHighlight="#090909"
            android:textColorHint="#157575"
            android:textColorLink="#FAF3F3"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputPassword2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/lginbg"

            android:ems="20"

            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:password="false"
            android:textColor="#157575"
            android:textColorHint="#157575"
            android:textStyle="bold" />


        <CheckBox
            android:id="@+id/c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_65sdp"

            android:text="Show Password"
            android:textColor="#157575"
            android:textSize="12sp"
            android:textStyle="bold" />




        <ImageButton


            android:id="@+id/btnLogin2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_40sdp"
            android:gravity="center"
            android:minWidth="120dp"

            android:padding="8dp"
            android:singleLine="true"
            android:textSize="16sp"


            android:visibility="visible"
            app:backgroundTint="#ffffff"
            app:srcCompat="@drawable/signin"
            tools:ignore="SpeakableTextPresentCheck" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/signInButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"

            />

        <TextView
            android:id="@+id/forgotPassword2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:text="Forgot Password?"
            android:textColor="#157575"
            android:textSize="@dimen/_12sdp" />
        <TextView
            android:id="@+id/dontHaveacc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:text="Dont Have an account.. create one"
            android:textColor="#157575"
            android:textSize="@dimen/_12sdp" />

    </LinearLayout>


</RelativeLayout>