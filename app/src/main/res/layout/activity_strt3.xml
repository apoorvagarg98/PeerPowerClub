<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".strt3">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_50sdp"

        android:paddingRight="@dimen/_50sdp"

        >
        <ImageView
            android:layout_width="@dimen/_104sdp"
            android:layout_height="@dimen/_104sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:srcCompat="@drawable/strt" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_140sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:srcCompat="@drawable/swita" />

        <TextView
            android:id="@+id/forgotPassword2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:text="These will be visible to join only when the time of the previous Peer Group has finished.
First time user will see them, once he is a part of a particular Peer Group then these will not be accessible to users.
"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:srcCompat="@drawable/strtb" />





    </LinearLayout>
</RelativeLayout>