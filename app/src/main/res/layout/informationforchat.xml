<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:layout_marginTop="@dimen/_20sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:fontFamily="@font/roboto_slab_bold"

            android:gravity="center"
            android:text="Perks of Peer Clubs "
            android:textColor="#3D3D45"
            android:textSize="@dimen/_18sdp" />

        <TextView

            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:drawableLeft="@drawable/chatimagefront"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/roboto_slab"
            android:paddingLeft="@dimen/_5sdp"
            android:text="You can schedule a google meet and interact with each other"
            android:textColor="#090909"

            android:textSize="@dimen/_16sdp" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:drawableLeft="@drawable/chatimagefront"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/roboto_slab"
            android:paddingLeft="@dimen/_5sdp"

            android:text="You can have a personal call with your peers and discuss great things!"
            android:textColor="#090909"
            android:textSize="@dimen/_16sdp" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:drawableLeft="@drawable/chatimagefront"
            android:drawablePadding="@dimen/_10sdp"

            android:fontFamily="@font/roboto_slab"
            android:paddingLeft="@dimen/_5sdp"
            android:text="You can follow the roadmap to learn python"
            android:textColor="#090909"

            android:textSize="@dimen/_16sdp" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:drawableLeft="@drawable/chatimagefront"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/roboto_slab"

            android:paddingLeft="@dimen/_5sdp"
            android:text="You can connect with each other through whatsapp"
            android:textColor="#090909"
            android:textSize="@dimen/_16sdp" />


    </LinearLayout>

</RelativeLayout>