<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chatmenusettings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:padding="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"

                android:src="@drawable/ic_baseline_arrow_back_ios_24" />


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Peer Club Menu"
                android:padding="@dimen/_10sdp"
                android:textColor="#303030"
                android:fontFamily="@font/roboto_slab_bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_15sdp"
                />

        </LinearLayout>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/roboto_slab_bold"
            android:gravity="center"

            android:text="──────────────────────────"
            android:textColor="#4C72F0"
            android:textSize="@dimen/_15sdp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         android:layout_gravity="center"
            android:src="@drawable/clubmenu"/>


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_2sdp"
            android:drawableLeft="@drawable/ic_baseline_event_note_24"
            android:drawablePadding="@dimen/_5sdp"
            android:fontFamily="@font/roboto_slab"
            android:padding="@dimen/_10sdp"
            android:text="Learning Roadmap"
            android:textColor="#000000"
            android:textSize="@dimen/_15sdp" />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/roboto_slab"
            android:drawableLeft="@drawable/ic_baseline_fact_check_24"
            android:padding="@dimen/_10sdp"
            android:text="Peer Club FAQs"
            android:layout_marginTop="@dimen/_2sdp"
            android:drawablePadding="@dimen/_5sdp"
            android:textColor="#000000"
            android:textSize="@dimen/_15sdp" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/roboto_slab"

            android:padding="@dimen/_10sdp"
            android:drawableLeft="@drawable/ic_baseline_error_24"
            android:text="What is end date?"
            android:drawablePadding="@dimen/_5sdp"
            android:textColor="#000000"
            android:layout_marginTop="@dimen/_2sdp"
            android:textSize="@dimen/_15sdp" />


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/roboto_slab"
            android:padding="@dimen/_10sdp"
            android:drawableLeft="@drawable/ic_baseline_support_agent_24"
            android:text="Support"
            android:drawablePadding="@dimen/_5sdp"
            android:textColor="#000000"
            android:layout_marginTop="@dimen/_2sdp"
            android:textSize="@dimen/_15sdp" />

    </LinearLayout>
</RelativeLayout>