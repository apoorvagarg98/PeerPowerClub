<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".joinchat"

    android:orientation="vertical">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"

        android:paddingLeft="@dimen/_10sdp"

        android:paddingRight="@dimen/_10sdp">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <ImageButton
                android:layout_width="@dimen/_44sdp"
                android:layout_height="@dimen/_44sdp"
                android:layout_gravity="center"

                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/box1"
                android:src="@drawable/ic_baseline_arrow_back_ios_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/roboto_slab_bold"

                android:gravity="center"
                android:text="Join XYZ Club"
                android:textColor="#3D3D45"
                android:textSize="@dimen/_18sdp" />
        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_201sdp"
            android:layout_marginTop="@dimen/_5sdp"

            app:srcCompat="@drawable/chatjoin" />

        <TextView

            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/roboto_slab"
            android:gravity="center"
            android:paddingTop="@dimen/_5sdp"
            android:text="Peer-to-Peer Learning  Chat with people of same mindset and goals "
            android:textColor="#303030"
            android:textSize="@dimen/_15sdp" />

        <TextView

            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_50sdp"
            android:fontFamily="@font/roboto_slab"
            android:gravity="center"
            android:paddingTop="@dimen/_5sdp"
            android:text="ðŸ“š Join Peer Club and start learning"
            android:textColor="#303030"
            android:textSize="@dimen/_14sdp" />

        <Button


            android:id="@+id/joinpeerfirstpage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/box"
            android:fontFamily="@font/roboto_slab"
            android:padding="@dimen/_8sdp"
            android:text="Join XYZ club"
            android:textAllCaps="false"
            android:textSize="@dimen/_13sdp"
            app:backgroundTint="#4C72F0" />


    </LinearLayout>
</RelativeLayout>