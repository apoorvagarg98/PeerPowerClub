<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".joinchat"
    android:background="@drawable/bggg"
    android:orientation="vertical">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"

        android:paddingLeft="@dimen/_10sdp"

        android:paddingRight="@dimen/_10sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/roboto_slab_bold"
            android:text="Peer Chat"
            android:textColor="#2B26C1"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:srcCompat="@drawable/chatjoin" />

        <TextView

            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/roboto_slab_bold"
            android:gravity="center"
            android:paddingTop="@dimen/_5sdp"
            android:text="Peer-to-Peer Learning  Chat with people of same mindset and goals "
            android:textColor="#3623DC"
            android:textSize="@dimen/_16sdp" />

        <TextView

            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/roboto_slab_bold"
            android:gravity="center"
            android:paddingTop="@dimen/_5sdp"
            android:text="Join Peer Club and start learning"
            android:textColor="#3623DC"
            android:textSize="@dimen/_16sdp" />

        <Button


            android:id="@+id/joinpeer"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"

            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/inpuut_bg"

            android:fontFamily="@font/roboto_slab_bold"
            android:gravity="center"


            android:minWidth="120dp"
            android:padding="8dp"
            android:singleLine="true"
            android:text="Join Peer Club"

            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="normal"
            android:visibility="visible"
            app:backgroundTint="#4C72F0" />


    </LinearLayout>
</RelativeLayout>