<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".alreadyinaclub">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"

        android:paddingLeft="@dimen/_10sdp"

        android:paddingRight="@dimen/_10sdp">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="@dimen/_44sdp"
                android:layout_height="@dimen/_44sdp"
                android:layout_gravity="center"

                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/box1"
                android:src="@drawable/ic_baseline_arrow_back_ios_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/roboto_slab_bold"

                android:gravity="center"
                android:text="Peer Clubs"
                android:textColor="#3D3D45"
                android:textSize="@dimen/_18sdp" />
        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_201sdp"
            android:layout_marginTop="@dimen/_5sdp"

            app:srcCompat="@drawable/chatjoin" />

        <TextView

            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/roboto_slab"
            android:gravity="center"

            android:text="You are already a part of peer club"
            android:textColor="#303030"
            android:textSize="@dimen/_17sdp" />

        <TextView

            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_50sdp"
            android:fontFamily="@font/roboto_slab"
            android:gravity="center"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_10sdp"

            android:text="In order to provide best skill learning and peer experience we allow joining of only one club at a time"
            android:textColor="#303030"
            android:textSize="@dimen/_12sdp" />

        <Button


            android:id="@+id/joinpeerlastpage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/box"
            android:fontFamily="@font/roboto_slab"
            android:padding="@dimen/_8sdp"
            android:text="Join Peer club"
            android:textAllCaps="false"
            android:textSize="@dimen/_13sdp"
            app:backgroundTint="#4C72F0" />


    </LinearLayout>

</RelativeLayout>