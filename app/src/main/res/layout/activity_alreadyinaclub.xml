<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".alreadyinaclub">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"

        android:paddingLeft="@dimen/_10sdp"

        android:paddingRight="@dimen/_10sdp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="@dimen/_46sdp"
                android:layout_height="@dimen/_43sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"


                android:src="@drawable/ic_baseline_arrow_back_ios_24" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Club"
                android:padding="@dimen/_10sdp"
                android:textColor="#303030"
                android:fontFamily="@font/roboto_slab_bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_18sdp"/>

        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:srcCompat="@drawable/chatjoin" />

        <TextView

            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/roboto_slab"
            android:gravity="center"

            android:text="You are already a part of peer club"
            android:textColor="#303030"
            android:textSize="@dimen/_15sdp" />

        <TextView

            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/roboto_slab"
            android:gravity="center"
            android:paddingTop="@dimen/_5sdp"
            android:text="In order to provide best skill learning and peer experience we allow joining of only one club at a time"
            android:textColor="#303030"
            android:textSize="@dimen/_14sdp" />

        <Button


            android:id="@+id/joinpeerlastpage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:padding="@dimen/_12sdp"
            android:fontFamily="@font/roboto_slab"
            android:text="Join XYZ club"
            android:textSize="@dimen/_13sdp"
            android:textAllCaps="false"
            app:backgroundTint="#4C72F0"/>


    </LinearLayout>

</RelativeLayout>