<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bggg"
    android:gravity="center"
    tools:context=".scregistered">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_50sdp"

        android:paddingRight="@dimen/_50sdp"

        >

    <ImageView
        android:id="@+id/tick"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginLeft="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_100sdp"
        android:background="@drawable/check"
        android:gravity="center"

        />

    <TextView
        android:id="@+id/forgotPassword2"
        android:layout_width="@dimen/_249sdp"
        android:layout_height="@dimen/_95sdp"

        android:gravity="center"
        android:textColor="#157575"
        android:text="Sucessfully registered"
        android:textSize="@dimen/_16sdp"
        android:textStyle="normal" />

        <Button
            android:id="@+id/btngotohome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_40sdp"
            android:background="@drawable/inpuut_bg"
            android:gravity="center"

            android:minWidth="120dp"
            android:padding="8dp"
            android:singleLine="true"
            android:text="Move to Home"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="visible"
            app:backgroundTint="#157575"
            app:backgroundTintMode="src_in" />

</LinearLayout>

</RelativeLayout>