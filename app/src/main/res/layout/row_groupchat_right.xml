<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_marginLeft="@dimen/_120sdp"
    android:layout_marginTop="5dp"
    android:background="@drawable/chtt"
   >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">
    <TextView
        android:id="@+id/nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:text="me"
        android:textColor="@color/design_default_color_primary"
        android:textStyle="bold"
        android:visibility="gone" />

        <TextView
            android:id="@+id/messageTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/roboto_slab"

            android:paddingLeft="@dimen/_12sdp"
            android:text="the message"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/timetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/messageTv"
            android:layout_alignEnd="@+id/messageTv"
            android:layout_alignRight="@+id/messageTv"
            android:layout_marginLeft="@dimen/_45sdp"
            android:layout_marginTop="5dp"


            android:layout_marginEnd="83dp"
            android:layout_marginRight="83dp"
            android:fontFamily="@font/roboto_slab_light"
            android:paddingLeft="@dimen/_10sdp"
            android:text="time"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>
</RelativeLayout>