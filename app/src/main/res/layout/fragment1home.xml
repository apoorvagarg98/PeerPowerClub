<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"

        android:paddingLeft="@dimen/_43sdp"

        android:paddingRight="@dimen/_43sdp"
      >

        <ImageView
            android:id="@+id/signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Details"
            android:textColor="#090909"
            android:textSize="34sp"
            android:textStyle="bold"
            app:srcCompat="@drawable/imgbg" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lginbg"
            android:paddingLeft="20dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="Name:"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#157575"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phonenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lginbg"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="Contact No:"
            android:textColor="#157575"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Email"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/lginbg"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="Email:"
            android:textColor="#157575"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/areaofinterest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/lginbg"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="Area Of Interest:"
            android:textColor="#157575"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/prefferedtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/lginbg"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="Preffered Timing:"
            android:textColor="#157575"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />



        <Button
            android:id="@+id/logout"
            android:layout_width="@dimen/_189sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="110dp"
            android:layout_gravity="center"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="110dp"
            android:layout_marginRight="110dp"
            android:layout_marginBottom="117dp"
            android:background="@drawable/inpuut_bg"
            android:text="Log Out"
            android:textColor="#F8F5F5"
            app:backgroundTint="#157575"
            android:textSize="16sp"
            android:textStyle="bold"

            />
    </LinearLayout>


</RelativeLayout>