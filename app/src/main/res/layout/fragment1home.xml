<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"

    android:orientation="vertical">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"

        android:paddingLeft="@dimen/_10sdp"

        android:paddingRight="@dimen/_10sdp">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            >

            <ImageButton
                android:layout_width="@dimen/_44sdp"
                android:layout_height="@dimen/_44sdp"
                android:layout_marginLeft="@dimen/_2sdp"

                android:layout_gravity="center"
                android:background="@drawable/box1"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:fontFamily="@font/roboto_slab"
                android:gravity="center"

                android:layout_gravity="center"
                android:text="Peer Club Profile"
                android:textColor="#3D3D45"
                android:textSize="@dimen/_18sdp"
                />
        </LinearLayout>





        <ScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="115dp"
                    android:layout_height="108dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="center"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/name"
                    style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"


                    android:background="@drawable/textviewbg"
                    android:backgroundTint="#FAFBFD"
                    android:ems="20"
                    android:fontFamily="@font/roboto_slab"
                    android:hint="Fullname:"
                    android:includeFontPadding="false"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:padding="@dimen/_10sdp"
                    android:shadowColor="#F8EFEF"
                    android:textColor="#131313"

                    android:textColorHighlight="#090909"
                    android:textColorLink="#FAF3F3"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/Email"
                    style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"

                    android:background="@drawable/textviewbg"

                    android:backgroundTint="#FAFBFD"
                    android:textColorHint=" #9D9FA0"

                    android:ems="20"
                    android:fontFamily="@font/roboto_slab"
                    android:hint="Email:"
                    android:minHeight="48dp"

                    android:padding="@dimen/_10sdp"
                    android:textColor="#131313"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/phonenumber"
                    style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"

                    android:background="@drawable/textviewbg"

                    android:backgroundTint="#FAFBFD"
                    android:textColorHint=" #9D9FA0"

                    android:ems="20"
                    android:fontFamily="@font/roboto_slab"
                    android:hint="Number:"
                    android:minHeight="48dp"

                    android:padding="@dimen/_10sdp"
                    android:textColor="#131313"
                    android:textStyle="bold" />

                <TextView


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"

                    android:background="@drawable/textviewbg"

                    android:backgroundTint="#FAFBFD"

                    android:ems="20"
                    android:fontFamily="@font/roboto_slab"
                    android:minHeight="48dp"
                    android:padding="@dimen/_10sdp"
                    android:text="Skills that you are good at:"
                    android:textColor="#131313"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/skills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/roboto_slab"
                    android:padding="@dimen/_10sdp"
                    android:text="Skills:"
                    android:textColor="#131313"
                    android:textColorHint=" #9D9FA0"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <TextView


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"

                    android:background="@drawable/textviewbg"

                    android:backgroundTint="#FAFBFD"

                    android:ems="20"
                    android:fontFamily="@font/roboto_slab"
                    android:minHeight="48dp"
                    android:padding="@dimen/_10sdp"
                    android:text="Skills that you want to learn:"
                    android:textColor="#131313"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/pSkillstolearn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/roboto_slab"
                    android:padding="@dimen/_10sdp"
                    android:text="Skills to learn:"
                    android:textColor="#131313"
                    android:textColorHint=" #9D9FA0"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <TextView


                    android:id="@+id/stg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/_10sdp"

                    android:background="@drawable/textviewbg"

                    android:backgroundTint="#FAFBFD"
                    android:ems="20"
                    android:fontFamily="@font/roboto_slab"
                    android:minHeight="48dp"
                    android:padding="@dimen/_10sdp"
                    android:text="Short term goal: (one year)"
                    android:textColor="#131313"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/stg2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/roboto_slab"
                    android:padding="@dimen/_10sdp"
                    android:text="Short Term Goal"
                    android:textColor="#131313"
                    android:textColorHint=" #9D9FA0"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <TextView


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"

                    android:background="@drawable/textviewbg"

                    android:backgroundTint="#FAFBFD"

                    android:ems="20"
                    android:fontFamily="@font/roboto_slab"
                    android:minHeight="48dp"
                    android:padding="@dimen/_10sdp"
                    android:text="Long term goals: (Five year)"
                    android:textColor="#131313"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/ltg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/roboto_slab"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="Long Term Goals"
                    android:textColor="#131313"
                    android:textColorHint=" #9D9FA0"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <TextView


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"

                    android:background="@drawable/textviewbg"

                    android:backgroundTint="#FAFBFD"
                    android:ems="20"
                    android:fontFamily="@font/roboto_slab"
                    android:gravity="center"
                    android:minHeight="48dp"
                    android:padding="@dimen/_10sdp"
                    android:text="Available for Personal Peer Call:"
                    android:textColor="#131313"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dayornight"
                        android:layout_width="@dimen/_136sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:drawablePadding="@dimen/_10sdp"
                        android:clipChildren="true"
                        android:clipToPadding="true"
                        android:contentDescription="@string/Dayornight"

                        android:drawingCacheQuality="high"
                        android:dropDownWidth="match_parent"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/_10sdp"
                        android:spinnerMode="dropdown"


                        android:splitMotionEvents="true" />

                    <TextView
                        android:id="@+id/timeforcall"
                        android:layout_width="@dimen/_136sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:drawablePadding="@dimen/_5sdp"
                        android:clipChildren="true"
                        android:clipToPadding="true"
                        android:contentDescription="@string/time"

                        android:drawingCacheQuality="high"
                        android:dropDownWidth="match_parent"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_10sdp"
                        android:spinnerMode="dropdown"


                        android:splitMotionEvents="true" />

                </LinearLayout>


                <TextView


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"

                    android:backgroundTint="#FAFBFD"
                    android:gravity="center"

                    android:ems="20"

                    android:fontFamily="@font/roboto_slab"
                    android:text="Social Media Links"
                    android:minHeight="48dp"
                    android:padding="@dimen/_10sdp"
                    android:textColor="#0E0E0E"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/linkedIdProfileUrl"
                    style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"

                    android:background="@drawable/textviewbg"

                    android:backgroundTint="#FAFBFD"

                    android:ems="20"
                    android:fontFamily="@font/roboto_slab"
                    android:hint="Linkedin Id:"
                    android:minHeight="48dp"

                    android:padding="@dimen/_10sdp"
                    android:textColor="#131313"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/instagram"
                    style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"

                    android:background="@drawable/textviewbg"

                    android:backgroundTint="#FAFBFD"

                    android:ems="20"
                    android:fontFamily="@font/roboto_slab"
                    android:hint="Instagram:"
                    android:minHeight="48dp"

                    android:padding="@dimen/_10sdp"
                    android:textColor="#131313"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/twitter"
                    style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"

                    android:background="@drawable/textviewbg"

                    android:backgroundTint="#FAFBFD"

                    android:ems="20"
                    android:fontFamily="@font/roboto_slab"
                    android:hint="Twitter:"
                    android:minHeight="48dp"

                    android:padding="@dimen/_10sdp"
                    android:textColor="#131313"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/other"
                    style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"

                    android:layout_marginBottom="@dimen/_30sdp"

                    android:background="@drawable/textviewbg"

                    android:backgroundTint="#FAFBFD"
                    android:ems="20"
                    android:fontFamily="@font/roboto_slab"
                    android:hint="Others:"

                    android:minHeight="48dp"
                    android:padding="@dimen/_10sdp"
                    android:textColor="#131313"
                    android:textStyle="bold" />

            </LinearLayout>
        </ScrollView>


    </LinearLayout>


</RelativeLayout>