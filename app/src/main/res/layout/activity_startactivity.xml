<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".startactivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>

    <LinearLayout
        android:id="@+id/LOGREG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingLeft="@dimen/_43sdp"
        android:paddingRight="@dimen/_43sdp"
        android:paddingTop="@dimen/_20sdp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome To Peer Power Club"
            android:layout_marginTop="@dimen/_minus10sdp"
            android:layout_marginBottom="@dimen/_80sdp"
            android:textColor="@color/purple_500"
            android:textStyle="bold"
            android:textSize="@dimen/_30sdp"/>


        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_minus25sdp"
            android:layout_marginBottom="@dimen/_25sdp"

            android:gravity="center"
            android:includeFontPadding="false"
            android:minWidth="120dp"
            android:padding="8dp"
            android:singleLine="true"
            android:text="Sign In"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15sdp"
            android:visibility="visible" />

        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_minus18sdp"
            android:layout_marginBottom="@dimen/_10sdp"

            android:gravity="center"
            android:includeFontPadding="false"
            android:minWidth="120dp"
            android:padding="8dp"
            android:singleLine="true"
            android:text="Register"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15sdp"
            android:visibility="visible" />

    </LinearLayout>


</RelativeLayout>